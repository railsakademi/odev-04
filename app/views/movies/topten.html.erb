<h1>Top Ten Movies </h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Point</th>
        <th>Director</th>
        <th>Country</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @count.each do |mvid,param| %>
        <tr>
          <td>
            <%= link_to (image_tag param[:movie].image.url(:small)), param[:movie] %>
          </td>
          <td><%= param[:movie].title %></td>
          <td><%= param[:point] %></td>
          <td><%= param[:movie].director %></td>
          <td><%= param[:movie].country %></td>
          <td><%= param[:movie].date %></td>
          <td><%= link_to 'Show', param[:movie], class: "btn btn-info" %></td>

          <% if user_signed_in? %>
            <td><%= link_to 'Edit', edit_movie_path(param[:movie]) , class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', param[:movie], method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
