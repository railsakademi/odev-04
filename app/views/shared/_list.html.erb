<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Director</th>
      <th>Country</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= link_to (image_tag movie.image.url(:small)), movie %>
        </td>
        <td><%= movie.title %></td>
        <td><%= movie.description.truncate_words(6) %></td>
        <td><%= movie.director %></td>
        <td><%= movie.country %></td>
        <td><%= movie.date %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-info" %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Edit', edit_movie_path(movie) , class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
